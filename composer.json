{
  "name": "charonlab/charon-db",
  "description": "An lightweight database abstraction layer (DBAL) library.",
  "license": "MIT",
  "keywords": [
    "dal",
    "db",
    "dbal"
  ],
  "require": {
    "php": "~8.2.0 || ~8.3.0",
    "ext-pdo": "*",
    "nulldark/stdlib": "^2.0.0"
  },
  "require-dev": {
    "charonlab/coding-standard": "1.2.x-dev",
    "phpunit/phpunit": "^10.5.x-dev",
    "vimeo/psalm": "^5.x-dev"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Charon\\Db\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Charon\\Test\\Integration\\": "tests/integration/",
      "Charon\\Test\\Performance\\": "tests/performance/",
      "Charon\\Test\\Unit\\": "tests/unit/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2.15"
    },
    "sort-packages": true
  },
  "scripts": {
    "lint-check": "phpcs",
    "lint-fix": "phpcbf",
    "static-analysis": "psalm --shepherd --stats",
    "test": "phpunit --colors=always"
  }
}
