{
  "name": "abyss/abyss-db",
  "description": "Database Component",
  "license": "MIT",
  "authors": [
    {
      "name": "Dominik Szamburski",
      "email": "dominikszamburski99@gmail.com"
    }
  ],
  "require": {
    "ext-pdo": "*",
    "nulldark/stdlib": "^2.0.0"
  },
  "require-dev": {
    "nulldark/devtools": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Abyss\\Db\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Abyss\\Test\\Unit\\": "tests/unit/",
      "Abyss\\Test\\Integration\\": "tests/integration/",
      "Abyss\\Test\\Performance\\": "tests/performance/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "nulldark/devtools": true
    },
    "sort-packages": true
  },
  "minimum-stability": "dev"
}
